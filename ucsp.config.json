{
  "version": 0.1,

  "save_logs": false,
  "save_schedule": false,
  "inspect_final_schedule": false,
  "fitness": {
    "functions": ["default", "default_expo"],
    "use": "default"
  },
  "constraints": {
    "soft_constraints": {
      "constraints": [
        {
          "id": 1,
          "unit_penalty": 0.9,
          "desc": "Instructors should only take certain courses they are are assigned to."
        },
        {
          "id": 2,
          "unit_penalty": 0.85,
          "desc": "A particular Room should only allow Classes of certain Courses."
        },
        {
          "id": 3,
          "unit_penalty": 0.6,
          "desc": "CourseGroups have Timeslot preferences."
        },
        {
          "id": 4,
          "unit_penalty": 0.5,
          "desc": "Instructors have Timeslot preferences."
        },
        {
          "id": 5,
          "unit_penalty": 0.8,
          "desc": "Lectures of the same Class (of a Course) should be taken at one day intervals, if the Course has 2 lectures_per_week and 1 timeslots_per_lecture."
        },
        {
          "id": 6,
          "unit_penalty": 0.8,
          "desc": "The Lab Section of a Course (if any) should be placed in adjacent Timeslots to the corresponding Theory Section."
        },
        {
            "id": 7, "unit_penalty": 0.9,
            "desc": "Instructors have minimum credit load requirements."
        }
      ],
      "use_ids": [1, 2, 3, 4,  6, 7]
    },
    "hard_constraints": {
      "constraints": [
        {
          "id": 1,
          "desc": "No two lectures can take place in the same room at the same Timeslot"
        },
        {
          "id": 2,
          "desc": "No instructor can take more than one lecture at a given Timeslot"
        }
      ],
      "use_ids": [1, 2]
    }
  },
  "schedule_param": {
    "strategies": [
      { "name": "folder", "path": "data/schedule_params/default/" },
      {
        "name": "discrete_files",
        "discrete_files": {
          "rooms_file": "data/schedule_params/default/rooms.csv",
          "timeslots_file": "data/schedule_params/default/timeslots.csv",
          "courses_file": "data/schedule_params/default/courses.csv",
          "instructors_file": "data/schedule_params/default/instructors.csv",
          "coursegroups_file": "data/schedule_params/default/course_groups.csv"
        }
      }
    ],
    "use_strategy": "discrete_files"
  }
}
